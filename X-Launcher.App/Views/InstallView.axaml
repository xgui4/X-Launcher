<UserControl 
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="X_Launcher.Views.InstallView"
    x:DataType="vm:InstallViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft/Image>.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:X_Launcher.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel  
        Margin="20"
        Spacing="10">
        <ScrollViewer>
        <StackPanel
            Margin="20"
            Spacing="10"
            VerticalAlignment="Center">
			 
            <Label Content="Username" />
            <TextBox Text="{Binding Username}" x:Name="UsernameInput" />

            <Label Content="Version" />
            <ComboBox
                ItemsSource="{Binding Versions}"
                SelectedItem="{Binding SelectedVersion}"
                x:Name="VersionsComboBox" />

            <Label Content="Launcher Path" />
            <TextBox Text="{Binding LauncherPath}" x:Name="LauncherPathInput" />
            <Button
                Command="{Binding SearchLocallyCommand}"
                Content="Search Locally"
                x:Name="SearchLocallyButton" />
            
            <Button
                Background="Green"
                Command="{Binding SetInstallerCommand}"
                Content="Install Minecraft"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                x:Name="LauncherButton" />

        </StackPanel>
    </ScrollViewer>
    </StackPanel>
</UserControl>